<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.itsme.letitgo.login.model.mapper.MemberMapper">
	<resultMap type="com.itsme.letitgo.login.model.dto.MemberDTO" id="loginMap">
		<id property="no" column="MEM_NO"/>
		<result property="id" column="MEM_ID"/>
		<result property="pwd" column="MEM_PWD"/>
		<result property="name" column="MEM_NAME"/>
		<result property="email" column="MEM_EMAIL"/>
		<result property="phone" column="MEN_PHONE"/>
		<result property="kinds" column="MEM_KINDS"/>
		<result property="enrollDate" column="MEM_ENROLL_DATE"/>
		<result property="entYn" column="MEM_ENT_YN"/>
		<result property="entDate" column="MEM_ENT_DATE"/>
	</resultMap>
	<select id="selectPwd" resultType="java.lang.String">
		SELECT	
				A.MEM_PWD
			FROM TBL_MEMBER A
		   WHERE A.MEM_ID = #{ id } 
	</select>
	<select id="selectId" resultMap="loginMap">
		SELECT
			A.MEM_NO
		   ,A.MEM_ID
		   ,A.MEM_PWD
		   ,A.MEM_NAME
		   ,A.MEM_EMAIL
		   ,A.MEM_PHONE    	
		   ,A.MEM_KINDS
		   ,A.MEM_ENROLL_DATE
		   ,A.MEM_ENT_YN
		   ,A.MEM_ENT_DATE
		 FROM TBL_MEMBER A
		 WHERE A.MEM_ID = #{ id }
	</select>

</mapper>